@{
    ViewData["Title"] = "Know Your Officers";
}

<div class="container py-5">
    <h2 class="mb-4 text-center">Know Your Officers</h2>

    <div class="row g-4">

        <div class="col-md-4">
            <div class="card shadow-sm h-100 text-center p-3">
                <i class="bi bi-person-badge-fill fs-1 text-primary"></i>
                <h5 class="mt-3">Booth Level Officer (BLO)</h5>
                <p class="small text-muted">Responsible for field verification and document validation.</p>
                <p><strong>Phone:</strong> 1800-000-111</p>
                <p><strong>Email:</strong> blo@eci.gov.in</p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100 text-center p-3">
                <i class="bi bi-building-fill-check fs-1 text-primary"></i>
                <h5 class="mt-3">Electoral Registration Officer (ERO)</h5>
                <p class="small text-muted">Final approval authority for voter registration.</p>
                <p><strong>Phone:</strong> 1800-000-222</p>
                <p><strong>Email:</strong> ero@eci.gov.in</p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100 text-center p-3">
                <i class="bi bi-bank2 fs-1 text-primary"></i>
                <h5 class="mt-3">Chief Electoral Officer (CEO)</h5>
                <p class="small text-muted">Oversees state-level electoral operations.</p>
                <p><strong>Phone:</strong> 1800-000-333</p>
                <p><strong>Email:</strong> ceo@eci.gov.in</p>
            </div>
        </div>

    </div>
</div>