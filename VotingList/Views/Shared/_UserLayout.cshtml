<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Voter Panel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        :root {
            --navy: #0d2c54;
            --gold: #d4af37;
        }

        body {
            background-color: #f4f6f9;
        }

        .navbar-custom {
            background-color: var(--navy);
            border-bottom: 4px solid var(--gold);
        }

            .navbar-custom .navbar-brand {
                color: white;
                font-weight: 600;
            }

        .logout-btn {
            background-color: #dc3545;
            border: none;
        }

            .logout-btn:hover {
                background-color: #bb2d3b;
            }

        .content-wrapper {
            padding: 40px 0;
        }

        .card-custom {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        }

        footer {
            background-color: var(--navy);
            color: white;
            padding: 15px;
            text-align: center;
            margin-top: 50px;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-custom px-4">
        <span class="navbar-brand">🗳 Voter Dashboard</span>
        <div class="ms-auto">
            <a asp-controller="Voters" asp-action="Logout" class="btn logout-btn text-white">
                Logout
            </a>
        </div>
    </nav>

    <div class="container content-wrapper">
        @RenderBody()
    </div>

    <footer>
        © 2026 National Voter Service Portal
    </footer>

</body>
</html>