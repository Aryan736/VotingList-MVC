    @using VotingList.Models
    @model Votermod
    @{
        ViewData["Title"] = "RegisterVoters";
    }

    @{
        Layout = null;
    }

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Clean voter registration form</title>
        
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:opsz,wght@14..32,400;14..32,500;14..32,600&display=swap" rel="stylesheet">
        <style>
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }

            body {
                background: #f0f4f8;
                font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
                display: flex;
                align-items: center;
                justify-content: center;
                min-height: 100vh;
                margin: 0;
                padding: 1.5rem;
                line-height: 1.5;
                color: #1e293b;
            }

            .form-card {
                max-width: 820px;
                width: 100%;
                background-color: #ffffff;
                border-radius: 28px;
                box-shadow: 0 20px 35px -8px rgba(0, 20, 30, 0.15), 0 5px 12px -4px rgba(0, 0, 0, 0.05);
                padding: 2.2rem 2.5rem;
                transition: all 0.2s ease;
            }

            @@media (max-width: 600px) {
                .form-card {
                    padding: 1.8rem 1.5rem;
                }
            }

            h1 {
                font-size: 2rem;
                font-weight: 600;
                letter-spacing: -0.02em;
                color: #0a2942;
                margin-bottom: 0.2rem;
            }

            .subhead {
                font-size: 0.95rem;
                color: #547290;
                margin-bottom: 1.8rem;
                border-left: 3px solid #2b6cb0;
                padding-left: 1rem;
                background: #f8fafd;
                border-radius: 0 12px 12px 0;
                line-height: 1.4;
            }

            .required-note {
                font-size: 0.85rem;
                color: #7b8a9b;
                margin-bottom: 1.5rem;
                text-align: right;
            }

                .required-note span {
                    color: #c5283d;
                    font-weight: 500;
                }

            form {
                display: flex;
                flex-direction: column;
                gap: 0.2rem;
            }

            .form-row {
                display: grid;
                grid-template-columns: 1fr 1fr;
                gap: 1.2rem;
            }

            .form-row-3col {
                display: grid;
                grid-template-columns: 1.5fr 0.9fr 0.9fr;
                gap: 1rem;
            }

            @@media (max-width: 640px) {
                .form-row, .form-row-3col {
                    grid-template-columns: 1fr;
                    gap: 0.2rem;
                }
            }

            .form-group {
                display: flex;
                flex-direction: column;
                margin-bottom: 1rem;
            }

            label {
                font-weight: 500;
                font-size: 0.9rem;
                margin-bottom: 0.3rem;
                color: #2c3f55;
                display: flex;
                align-items: center;
                gap: 4px;
            }

            .required-star {
                color: #c5283d;
                font-size: 1.1rem;
                line-height: 1;
                margin-left: 2px;
            }

            input, select, datalist option {
                font-family: 'Inter', sans-serif;
            }

                input:not([type="checkbox"]), select {
                    width: 100%;
                    padding: 0.75rem 1rem;
                    border: 1.5px solid #e2e8f0;
                    border-radius: 14px;
                    font-size: 0.95rem;
                    background-color: #fafcff;
                    transition: border 0.15s, box-shadow 0.15s, background-color 0.15s;
                    outline: none;
                    color: #1e293b;
                }

                    input:not([type="checkbox"]):hover {
                        border-color: #bdd3e8;
                    }

                    input:not([type="checkbox"]):focus, select:focus {
                        border-color: #2b6cb0;
                        background-color: #ffffff;
                        box-shadow: 0 0 0 4px rgba(43, 108, 176, 0.15);
                    }

                
                input[list] {
                    background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="%23547290" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"></polyline></svg>');
                    background-repeat: no-repeat;
                    background-position: right 1rem center;
                    background-size: 1rem;
                }

            ::placeholder {
                color: #9bb1c6;
                opacity: 0.7;
                font-weight: 400;
            }

            
            .checkbox-group {
                display: flex;
                align-items: flex-start;
                gap: 0.75rem;
                margin: 1.2rem 0 0.8rem;
                padding: 0.5rem 0;
            }

                .checkbox-group input[type="checkbox"] {
                    width: 1.2rem;
                    height: 1.2rem;
                    accent-color: #2b6cb0;
                    margin-top: 0.2rem;
                    flex-shrink: 0;
                }

                .checkbox-group label {
                    font-weight: 400;
                    font-size: 0.95rem;
                    color: #2b4a6b;
                    margin-bottom: 0;
                    line-height: 1.4;
                }

                .checkbox-group a {
                    color: #2b6cb0;
                    text-decoration: none;
                    border-bottom: 1px dotted #8eb9e0;
                }

                    .checkbox-group a:hover {
                        border-bottom: 1px solid #2b6cb0;
                    }

            .btn-submit {
                background: #1a4b7a;
                background: linear-gradient(145deg, #1e4e7a, #0f3b5e);
                color: white;
                font-weight: 600;
                font-size: 1.1rem;
                padding: 1rem 1.8rem;
                border: none;
                border-radius: 40px;
                cursor: pointer;
                transition: all 0.2s ease;
                box-shadow: 0 8px 18px -6px rgba(20, 60, 100, 0.3);
                margin-top: 2rem;
                margin-bottom: 0.5rem;
                letter-spacing: 0.3px;
                border: 1px solid rgba(255, 255, 255, 0.1);
                width: 100%;
            }

                .btn-submit:hover {
                    background: #21629e;
                    background: linear-gradient(145deg, #2569a5, #124670);
                    transform: scale(1.01);
                    box-shadow: 0 12px 24px -8px #1a4e7a66;
                }

                .btn-submit:active {
                    transform: scale(0.98);
                    background: #0f3b5e;
                }

            .footer-note {
                text-align: center;
                font-size: 0.8rem;
                color: #8da0b5;
                margin-top: 1.4rem;
                border-top: 1px solid #eaf0f6;
                padding-top: 1.2rem;
            }

            hr {
                border: none;
                border-top: 1.5px solid #e8edf3;
                margin: 1rem 0 0.5rem;
            }

            
            datalist {
                display: none;
            }

            
            .address-hint {
                font-size: 0.8rem;
                color: #6b85a0;
                margin-top: 0.2rem;
            }
        </style>
    </head>
    <body>
        <div class="form-card">
            <h1>🗳️ Voter registration</h1>
            <div class="subhead">Complete this form to register or update your voter information. All fields with <span class="required-star">*</span> are required.</div>

            <form action="#" method="post">
                <!-- first row: first + last name -->
                <div class="form-row">
                    <div class="form-group">
                        <label for="first_name">First name <span class="required-star" aria-hidden="true">*</span></label>
                    <input type="text" id="firstName" name="firstName" placeholder="firstName" asp-for="firstName" required>
                    </div>
                    <div class="form-group">
                        <label for="last_name">Last name <span class="required-star" aria-hidden="true">*</span></label>
                    <input type="text" id="lastName" name="lastName" placeholder="lastName" asp-for="lastName" required>
                    </div>
                </div>

                <!-- date of birth + email row (2col) -->
                <div class="form-row">
                    <div class="form-group">
                        <label for="dob">Date of birth <span class="required-star" aria-hidden="true">*</span></label>
                        <input type="date" id="dob" name="dob" required value="2000-01-01" asp-for="dob">
                    </div>
                    <div class="form-group">
                        <label for="email">Email address <span class="required-star" aria-hidden="true">*</span></label>
                        <input type="email" id="email" name="email" placeholder="name@example.com" asp-for="email" required>
                    </div>
                </div>

                <!-- address line 1 (full width) -->
                <div class="form-group">
                    <label for="address1">Street address <span class="required-star" aria-hidden="true">*</span></label>
                    <input type="text" id="address1" name="address1" placeholder="123, 4th Cross, Gandhi Nagar" asp-for="address1" required>
                </div>

                <!-- address line 2 (optional, full width) -->
                <div class="form-group">
                    <label for="address2">Apt / Suite / Other (optional)</label>
                    <input type="text" id="address2" name="address2" placeholder="Apt 4B, Building 3" asp-for="address2">
                    <div class="address-hint">Leave blank if not applicable</div>
                </div>

                <!-- city, state, pin (3col) with datalist for state -->
                <div class="form-row-3col">
                    <div class="form-group">
                        <label for="city">City <span class="required-star" aria-hidden="true">*</span></label>
                        <input type="text" id="city" name="city" placeholder="Bengaluru" asp-for="city" required>
                    </div>
                    <div class="form-group">
                        <label for="state">State / UT <span class="required-star" aria-hidden="true">*</span></label>
                        <input type="text" id="state" name="state" list="state-suggestions" placeholder="e.g., MH" maxlength="2" asp-for="state" required>
                        <datalist id="state-suggestions">
                            <option value="AP">Andhra Pradesh</option>
                            <option value="AR">Arunachal Pradesh</option>
                            <option value="AS">Assam</option>
                            <option value="BR">Bihar</option>
                            <option value="CG">Chhattisgarh</option>
                            <option value="GA">Goa</option>
                            <option value="GJ">Gujarat</option>
                            <option value="HR">Haryana</option>
                            <option value="HP">Himachal Pradesh</option>
                            <option value="JH">Jharkhand</option>
                            <option value="KA">Karnataka</option>
                            <option value="KL">Kerala</option>
                            <option value="MP">Madhya Pradesh</option>
                            <option value="MH">Maharashtra</option>
                            <option value="MN">Manipur</option>
                            <option value="ML">Meghalaya</option>
                            <option value="MZ">Mizoram</option>
                            <option value="NL">Nagaland</option>
                            <option value="OD">Odisha</option>
                            <option value="PB">Punjab</option>
                            <option value="RJ">Rajasthan</option>
                            <option value="SK">Sikkim</option>
                            <option value="TN">Tamil Nadu</option>
                            <option value="TG">Telangana</option>
                            <option value="TR">Tripura</option>
                            <option value="UP">Uttar Pradesh</option>
                            <option value="UK">Uttarakhand</option>
                            <option value="WB">West Bengal</option>
                            <option value="AN">Andaman and Nicobar Islands</option>
                            <option value="CH">Chandigarh</option>
                            <option value="DH">Dadra and Nagar Haveli and Daman and Diu</option>
                            <option value="DL">Delhi</option>
                            <option value="JK">Jammu and Kashmir</option>
                            <option value="LA">Ladakh</option>
                            <option value="LD">Lakshadweep</option>
                            <option value="PY">Puducherry</option>
                        </datalist>
                    </div>
                    <div class="form-group">
                        <label for="pin">Pin code <span class="required-star" aria-hidden="true">*</span></label>
                        <input type="text" id="pin" name="pin" placeholder="123456" asp-for="pin" required>
                    </div>
                </div>

                <!-- phone + optional ID row -->
                <div class="form-row">
                    <div class="form-group">
                        <label for="phone">Phone number</label>
                        <input type="tel" id="phone" name="phone" placeholder="+91 855-xxxx" asp-for="phone">
                    </div>
                    <div class="form-group">
                        <label for="addhar">Addhar Number</label>
                        <input type="text" id="addhar" name="addhar" placeholder="1234 5678 9012" asp-for="addhar">
                    </div>
                </div>

                <hr>

                <!-- eligibility checkboxes (clean, readable) -->
                <div class="checkbox-group">
                <input type="checkbox" id="citizenCheck" name="citizenCheck" required asp-for="citizenCheck">
                    <label for="citizen_check">
                        <span class="required-star">*</span> I confirm that I am a citizen of the India and will be at least 18 years old on or before the next election.
                    </label>
                </div>

                <div class="checkbox-group">
                <input type="checkbox" id="truthfulCheck" name="truthfulCheck" required asp-for="truthfulCheck">
                    <label for="truthful_check">
                        <span class="required-star">*</span> I declare under penalty of perjury that the information provided is true and correct. I understand that providing false information is a crime.
                    </label>
                </div>

                <!-- optional: submit and additional info -->
                <button type="submit" class="btn-submit">📋 Register to vote</button>
                <div class="footer-note">
                    — This is a demonstration form — 
                </div>
            </form>
        </div>
    </body>
    </html>

